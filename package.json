{
  "name": "@soxhub/airtable-build-time",
  "version": "1.0.0",
  "description": "Update airtable with code coverage data",
  "keywords": [
    "airtable",
    "code coverage"
  ],
  "homepage": "https://github.com/soxhub/airtable-build-time#readme",
  "bugs": {
    "url": "https://github.com/soxhub/airtable-build-time/issues"
  },
  "repository": "git@github.com:soxhub/airtable-build-time.git",
  "license": "UNLICENSED",
  "author": {
    "name": "kiwiupover",
    "email": "dlaird@auditboard.com",
    "url": "auditboard.com"
  },
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "deduplicate-dependencies": "yarn-deduplicate && yarn && git add",
    "build": "rm -rf ./dist && ncc build index.ts",
    "changelog": "github-changelog-generator --future-release=v$npm_package_version > CHANGELOG.md",
    "lint": "eslint . --ext ts",
    "lint-staged": "lint-staged",
    "test": "jest",
    "version": "npm run build && npm run changelog && git add -A CHANGELOG.md dist"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.@(ts)": [
      "bash -c tsc --noEmit",
      "yarn lint"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "yarn.lock": "npm run deduplicate-dependencies"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "test"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "restoreMocks": true,
    "testEnvironment": "node",
    "testRegex": "index.test.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "airtable": "^0.11.5",
    "bignumber.js": "^9.1.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/airtable": "^0.10.1",
    "@types/jest": "^29.2.3",
    "@types/mock-fs": "^4.13.1",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@uphold/github-changelog-generator": "^1.0.2",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-uphold": "^2.0.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^29.3.1",
    "lint-staged": "^10.5.4",
    "mock-fs": "^5.0.0",
    "nock": "^13.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.0",
    "sort-package-json": "^1.49.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "engines": {
    "node": ">=16.x.x"
  }
}
